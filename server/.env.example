# Порт для backend сервера
PORT=3001

# URL фронтенда (для CORS)
FRONTEND_URL=http://localhost:5173

# CRM API настройки
# ВАЖНО: Получите эти данные от заказчика
CRM_API_URL=https://your-crm-api.com/api/v1
CRM_API_KEY=your_api_key_here

# Опциональные настройки в зависимости от CRM
# CRM_API_TOKEN=your_token_here
# CRM_API_SECRET=your_secret_here

# Email (SMTP) настройки для отправки результатов клиентам
# ВАЖНО: Настройте SMTP для отправки писем
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Имя отправителя в письмах
EMAIL_FROM_NAME=Тест слуха

# Примеры для популярных сервисов:
#
# Gmail:
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password (не обычный пароль, а App Password!)
#
# Mail.ru:
# SMTP_HOST=smtp.mail.ru
# SMTP_PORT=465
# SMTP_SECURE=true
# SMTP_USER=your-email@mail.ru
# SMTP_PASS=your-password
#
# Яндекс:
# SMTP_HOST=smtp.yandex.ru
# SMTP_PORT=465
# SMTP_SECURE=true
# SMTP_USER=your-email@yandex.ru
# SMTP_PASS=your-password
#
# SendGrid, Mailgun, AWS SES - смотрите их документацию
